public class Main {
    public static void main(String[] args) {

        int i;
        int j;
        int x = 10;
        for (int y = 0; y < x; y++) { 
        // x is the number of rows of '*'

            for (j = 0; j < y / 2 + 1; j++)
                System.out.print(' ');
                
            for (i = y; i < x - 1; i ++)
                System.out.print('*');

            for (j = 0; j < y * 2 + 1; j++)
                System.out.print(' ');
        }
    }
}
